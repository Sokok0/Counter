<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter.CounterView">

    <Frame x:Name="FrameContainer"
           CornerRadius="10"
           Padding="15"
           Margin="0,10">

        <VerticalStackLayout Spacing="8">
            <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center"/>
            <Label x:Name="NumberLabel" FontSize="16" HorizontalOptions="Center"/>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="+" Clicked="IncreaseClicked" />
                <Button Text="-" Clicked="DecreaseClicked" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Reset" Clicked="ResetClicked" />
                <Button Text="Remove" Clicked="RemoveClicked" TextColor="Black"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>